generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  profile User_profile?
}

enum jl{
  laki_laki
  perempuan
}
model User_profile{
  id Int @id @default(autoincrement())
  nama String?
  jenis_kelamin jl?
  tgl_lahir DateTime?
  foto String?
  user_id Int @unique
  user User @relation(fields: [user_id],references: [id])
}

model Barang{
  id Int @id @default(autoincrement())
  nama_barang String
  stok_barang Int
  harga Float
  foto String?

  created_at DateTime @default(now())
}